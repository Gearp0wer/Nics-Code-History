public class FoamCake extends Cake {
  
  public double baseCost(){
    double running_total = 0.0;
    Ingredient[] IList = ingredientsNeeded();
    for(Ingredient I : IList){
      running_total+= I.getPrice();
    }
    return running_total;
  }
//_____________________________________________________________________________________________________________________    
  public Ingredient[] ingredientsNeeded(){
    Ingredient[] ingredientList = new Ingredient[]{ Ingredient.Eggs, Ingredient.Sugar, Ingredient.Butter,
      Ingredient.Flavoring};
    return ingredientList;
  }
//_____________________________________________________________________________________________________________________    
  @Override
  public String description(){
    return "Foam Cake";
  }
}
