/**
* An Abstract implementing Clothing and Bottoms to specify methods for Pants objects
*
* @author  Nic Locklear
* @version 1.0
* @since   2021-03-31 
*/
public abstract class Pants implements Clothing, Bottoms {
  private String Type, Color, Fit;
  private int Size;
  
  public Pants(){
  }
  
  public Pants(String Type, int Size, String Color, String Fit) { 
    this.Type = Type;
    this.Size = Size;
    this.Color = Color;
    this.Fit = Fit;
  }
  
  public void setType(String newtype){
    this.Type = newtype;
  }
  
  public void setSize(int newsize){
    this.Size = newsize;
  }
  
  public void setColor(String newcolor){
    this.Color = newcolor;
  }
  
  public void setFit(String newfit){
    this.Fit = newfit;
  }
  
  public String getType(){
    return Type;
  }
  
  public int getSize(){
    return Size;
  }
  
  public String getColor(){
    return Color;
  }
  
  public String getFit(){
    return Fit;
  }
  
  @Override
  public String toString(){
    
    return("Type: " + getType() +" Size: " + getSize() + " Color: " + getColor() + " Fit: " + getFit());
  }

  
}
